<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_vertical">

    <TextView
        android:id="@+id/tvStepName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_sub"
        android:textStyle="normal"
        android:layout_marginEnd="@dimen/space_vertical"
        android:layout_marginStart="@dimen/space_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconEdit"
        app:layout_constraintLeft_toRightOf="@+id/iconEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconEdit"
        android:src="@drawable/ic_edit"
        android:importantForAccessibility="no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_margin"
        android:layout_marginEnd="@dimen/space_vertical"
        android:layout_marginStart="@dimen/space_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconDelete"
        app:layout_constraintLeft_toRightOf="@+id/iconDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconDelete"
        android:src="@drawable/ic_delete"
        android:importantForAccessibility="no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_margin"
        android:layout_marginStart="@dimen/space_vertical"
        android:layout_marginEnd="@dimen/space_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>